%br
- if @ontology_terms.size == 0
  %p
    No ontology terms found...
- else
  %p
    = found_count("ontology term", @ontology_terms)
  %p
    = render(:partial => "shared/pagination.html.haml", :locals => {:items => @ontology_terms, :limit => false})
  %br
  %table{:width => "100%", :border => "0", :cellpadding => "0", :cellspacing => "2"}
    %thead
      %tr.row-header
        %td{:width => "40%"}
          Ontology term
        %td{:width => "20%"}
          Annotation count
        - if admin?
          %td{:width => "20%"}
            Valid
          %td{:width => "20%"}
            Audited
    %tbody
      = render(:partial => "ontology_term.html.haml", :collection => @ontology_terms)
